    <form method="post" action="/directory-traversal-post-1" style="display: flex; align-items: center;">
        <select name="filename" style="margin-right: 20px; margin-left: 100px;">
        <option value="kotowaza1.txt">ことわざ1</option>
        <option value="kotowaza2.txt">ことわざ2</option>
        <option value="kotowaza3.txt">ことわざ3</option>
        </select>
      <input type="submit">
    </form>
    <br>
    <h3>ことわざ内容：
      <% if (typeof content !== 'undefined') { %>
        <%- content %>
      <% } %>
    </h3>
  </div>
</div>

</body>
</html>
